@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-5 pb-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-4">
                            <i class="bi bi-shield-check fs-2 text-primary"></i>
                        </div>
                        <div>
                            <h1 class="display-6 fw-light mb-2">Privacy Policy</h1>
                            <p class="text-muted">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <!-- Introduction -->
                            <section class="mb-5">
                                <h2 class="h4 fw-semibold mb-3">Our Commitment to Privacy</h2>
                                <p>
                                    At Password Analyzer, we take your privacy seriously. This policy explains how we handle your data when you use our password analysis service.
                                </p>
                            </section>

                            <!-- Data Collection -->
                            <section class="mb-5">
                                <h2 class="h4 fw-semibold mb-3">Data We Collect</h2>
                                <div class="alert alert-info border-0 bg-light">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Important:</strong> We do not store, log, or transmit any passwords you analyze.
                                </div>

                                <h5 class="mt-4 mb-3">Passwords</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Passwords are processed locally in server memory
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        No passwords are written to disk or databases
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Passwords are not transmitted to third parties
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Analysis occurs in real-time and is immediately discarded
                                    </li>
                                </ul>

                                <h5 class="mt-4 mb-3">Analytics Data</h5>
                                <p>We may collect anonymous usage statistics:</p>
                                <ul>
                                    <li>Page views and session duration</li>
                                    <li>Browser type and version</li>
                                    <li>General geographic location (country-level)</li>
                                    <li>Time and date of access</li>
                                </ul>
                            </section>

                            <!-- Security -->
                            <section class="mb-5">
                                <h2 class="h4 fw-semibold mb-3">Security Measures</h2>
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="border-start border-3 border-primary ps-3 py-2">
                                            <h6 class="fw-semibold mb-1">No Password Storage</h6>
                                            <p class="text-muted small mb-0">Passwords exist only in temporary memory during analysis</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="border-start border-3 border-primary ps-3 py-2">
                                            <h6 class="fw-semibold mb-1">HTTPS Encryption</h6>
                                            <p class="text-muted small mb-0">All communications are encrypted using TLS 1.3</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="border-start border-3 border-primary ps-3 py-2">
                                            <h6 class="fw-semibold mb-1">Server Security</h6>
                                            <p class="text-muted small mb-0">Regular security updates and vulnerability scanning</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="border-start border-3 border-primary ps-3 py-2">
                                            <h6 class="fw-semibold mb-1">Session Management</h6>
                                            <p class="text-muted small mb-0">Automatic session cleanup and timeout protection</p>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <!-- Third Parties -->
                            <section class="mb-5">
                                <h2 class="h4 fw-semibold mb-3">Third-Party Services</h2>
                                <p>We use the following third-party services:</p>
                                <div class="table-responsive">
                                    <table class="table table-borderless">
                                        <thead>
                                            <tr>
                                                <th>Service</th>
                                                <th>Purpose</th>
                                                <th>Data Shared</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Bootstrap</td>
                                                <td>CSS Framework</td>
                                                <td>None</td>
                                            </tr>
                                            <tr>
                                                <td>Bootstrap Icons</td>
                                                <td>Icon Library</td>
                                                <td>None</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                            <!-- User Rights -->
                            <section class="mb-5">
                                <h2 class="h4 fw-semibold mb-3">Your Rights</h2>
                                <div class="accordion" id="privacyAccordion">
                                    <div class="accordion-item border-0">
                                        <h3 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#right1">
                                                <i class="bi bi-eye me-3"></i>
                                                Right to Access
                                            </button>
                                        </h3>
                                        <div id="right1" class="accordion-collapse collapse">
                                            <div class="accordion-body">
                                                You can request information about any data we may have collected about you.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item border-0">
                                        <h3 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#right2">
                                                <i class="bi bi-trash me-3"></i>
                                                Right to Deletion
                                            </button>
                                        </h3>
                                        <div id="right2" class="accordion-collapse collapse">
                                            <div class="accordion-body">
                                                You can request deletion of any non-essential data we may have collected.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <!-- Contact -->
                            <section class="border-top pt-4">
                                <h2 class="h4 fw-semibold mb-3">Contact Us</h2>
                                <p>If you have questions about this privacy policy:</p>
                                <div class="d-flex align-items-center text-muted">
                                    <i class="bi bi-envelope me-3"></i>
                                    <span>privacy@password-analyzer.example.com</span>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white border-0 text-center py-4">
                    <div class="d-flex flex-column flex-sm-row justify-content-center align-items-center">
                        <div class="me-sm-3 mb-2 mb-sm-0">
                            <i class="bi bi-shield-lock text-primary me-2"></i>
                            <span class="text-muted">Your security is our priority</span>
                        </div>
                        <div>
                            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                <i class="bi bi-arrow-left me-1"></i>
                                Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>